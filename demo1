import React, { useState } from "react";
import { Col, Row } from "react-bootstrap";
import styled from "styled-components";

// Styled Components
export const OptionViewContainer = styled(Col)`
  padding: 0 10px;
`;

export const OptionsViewHeader = styled(Row)`
  height: 64px;
  border-bottom: 1px solid black;
  align-items: center;
  font-size: 20px;
  font-family: "Verizon NHG eDS Bold", sans-serif;
`;

export const OptionsViewRow = styled(Row)`
  height: 60px;
  border-bottom: 1px solid #d8dada;
  align-items: center;
  gap: 16px;
  font-family: "Verizon NHG eTX Bold", sans-serif;
`;

export const RadioButtonWrapper = styled.div`
  display: flex;
  align-items: center;
`;

export const RadioButton = styled.input.attrs({ type: 'radio' })`
  appearance: none;
  border-radius: 50%;
  width: 20px;
  height: 20px;
  border: 1px solid #000;
  margin-top: 0.25em;
  position: relative;
  &:hover {
    cursor: pointer;
  }
  &:checked::before {
    content: "";
    display: block;
    border-radius: 50%;
    width: 10px;
    height: 10px;
    background: #000;
    position: absolute;
    top: 4px;
    left: 4px;
  }
`;

// Component
export const OptionsView: React.FC = () => {
  const [selectedOption, setOption] = useState(0);

  return (
    <OptionViewContainer>
      <OptionsViewHeader>Logging view options</OptionsViewHeader>
      <OptionsViewRow>
        <RadioButtonWrapper>
          <RadioButton
            name="radio"
            checked={selectedOption === 0}
            onChange={() => setOption(0)}
          />
          <span>Past day</span>
        </RadioButtonWrapper>
      </OptionsViewRow>
      <OptionsViewRow>
        <RadioButtonWrapper>
          <RadioButton
            name="radio"
            checked={selectedOption === 1}
            onChange={() => setOption(1)}
          />
          <span>Past week</span>
        </RadioButtonWrapper>
      </OptionsViewRow>
      <OptionsViewRow>
        <RadioButtonWrapper>
          <RadioButton
            name="radio"
            checked={selectedOption === 2}
            onChange={() => setOption(2)}
          />
          <span>Custom range</span>
        </RadioButtonWrapper>
      </OptionsViewRow>
    </OptionViewContainer>
  );
};

export default OptionsView;

export function validateDomainName(text: string): boolean {
  const splitRoutername = text.split(".");
  for (let idx = 0; idx < splitRoutername.length; ++idx) {
    const element = splitRoutername[idx];
    if (element.length === 0 || element.length > 63 || (idx === splitRoutername.length - 1 && element.length > 12))
      return false;
  }
  return /^[a-zA-Z0-9](?:[a-zA-Z0-9._-]*[a-zA-Z0-9])?$/.test(text);
}

export function validateIp(ip: string, kind: "v4" | "v6" | "any" = "any"): boolean {
  const lowerCasedIp = ip.toLocaleLowerCase();
  if (kind === "v4") {
    return IPv4.isValid(lowerCasedIp) || IPv4.isValidCIDR(lowerCasedIp);
  } else if (kind === "v6") {
    return IPv6.isValid(lowerCasedIp) || IPv6.isValidCIDR(lowerCasedIp);
  }
  return isValid(lowerCasedIp) || isValidCIDR(lowerCasedIp);
}



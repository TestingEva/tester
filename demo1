import {
  useDeletePortForwardingRuleInfo,
  usePortForwardingRulesInfo,
} from "../../../domain/port-forwarding-rules/hooks";
import { ErrorIndicator } from "../../components/error-indicator/ErrorIndicator";
import { LoadingIndicator } from "../../components/loading-indicator/LoadingIndicator";
import { PortForwardingRulesView } from "./PortForwardingRulesView";

export const PortForwardingRules: React.FC = () => {
  const { data, isError, isPending, isFetching } = usePortForwardingRulesInfo();
  const { invoke, isError: isDeletingRulesError } = useDeletePortForwardingRuleInfo();

  const onEditClick = (index: number) => {
    console.log(index);
  };

  const onRemoveClick = (id: string) => {
    invoke(id);
  };

  if (isError || isDeletingRulesError) {
    return <ErrorIndicator />;
  }

  if (isPending || isFetching || data === undefined) {
    return <LoadingIndicator />;
  }

  return <PortForwardingRulesView data={data} onRemoveClick={onRemoveClick} onEditClick={onEditClick} />;
};

so in this component there is a edit button on click of the edit button onEditClick is being called and i want 
route to http://localhost:3000/#/adv/firewall/portrules/editservice on the click of edit button and also i want to send the 
index too how can i do that 

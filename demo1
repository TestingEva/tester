export function useSonStatus(): AsyncHookData<boolean> {
  const query = useQuery({
    queryKey: [KEY_SON_STATUS],
    queryFn: getSonStatus,
  });
  return asyncHookData(query);
}

export function useUpdateSonStatus(): LazyAsyncHookData<boolean, void> {
  const client = useQueryClient();
  const mut = useMutation({
    mutationKey: [KEY_UPDATE_SON_DETAIL],
    mutationFn: updateSonStatus,
    onSuccess: async () => {
      await client.invalidateQueries({ queryKey: [KEY_SON_STATUS] });
      await client.invalidateQueries({ queryKey: [KEY_RADIO_STATUS] });
      await client.invalidateQueries({ queryKey: [KEY_WIFI_DETAILS] });
    },
  });
  return lazyAsyncHookData(mut);
}


the hook is getting invalidated but still it doesnot have the latest value

import { OptionViewContainer, OptionsButtonCol, OptionsViewHeader, OptionsViewRow, RadioButton } from "./styles";
import { SystemLogPageType } from "../SystemLogging";
import { OptionalComponent } from "../../../components/OffStageComponent";
import { useState } from "react";
import { VZButton } from "../../../components/vz-button/VZButton";
type Props = {
  changeActivePage: (pageType: SystemLogPageType) => void;
  changeDateTime: (optionSelected: 0 | 1 | 2, start?: Date, end?: Date) => void;
};
export const OptionsView: React.FC<Props> = ({ changeActivePage, changeDateTime }) => {
  const [selectedDateOption, setSelectedDateOption] = useState<0 | 1 | 2>(0);
  const localDateTime = "2024-05-24T07:44:44.369355675-04:00"
  const temp = new Date(); //TODO: Will be replaced by the Date Selected by the User
  const onSaveButtonClicked = () => {
    if (selectedDateOption === 2) {
      changeDateTime(selectedDateOption, temp, temp);
    } else {
      changeDateTime(selectedDateOption as 0 | 1);
    }
    changeActivePage(SystemLogPageType.Logs);
  };
  return (
    <OptionViewContainer>
      <OptionsViewHeader>Logging view options</OptionsViewHeader>
      <OptionsViewRow>
        <RadioButton name="radio" checked={selectedDateOption === 0} onChange={() => setSelectedDateOption(0)} />
        Past day
      </OptionsViewRow>
      <OptionsViewRow>
        <RadioButton name="radio" checked={selectedDateOption === 1} onChange={() => setSelectedDateOption(1)} />
        Past week
      </OptionsViewRow>
      <OptionsViewRow>
        <RadioButton name="radio" checked={selectedDateOption === 2} onChange={() => setSelectedDateOption(2)} />
        Custom range
      </OptionsViewRow>
      <OptionalComponent show={selectedDateOption === 2}>
        {/* TODO: Add a date Picker here and set the date Accordingly  */}
      </OptionalComponent>
      <OptionsButtonCol>
        <VZButton small secondary onClick={() => changeActivePage(SystemLogPageType.Logs)}>Cancel</VZButton>
        <VZButton small onClick={onSaveButtonClicked}>
          Save
        </VZButton>
      </OptionsButtonCol>
    </OptionViewContainer>
  );
};

export default OptionsView;


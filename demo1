import { useState } from "react";
import { DayPicker } from "react-day-picker";
import "react-day-picker/style.css";
import { OptionalComponent } from "../../../components/OptionalComponent";
import { VZInputTextField } from "../../../components/vz-input/VZInput";
import "./Datepicker.css";

type DatePickerProps = {
  selectedDate: Date;
  onDaySelect: (selectedDate?: Date) => void;
};

export const DatePickerComponent: React.FC<DatePickerProps> = ({ selectedDate, onDaySelect }) => {
  const [showDatePicker, setDatePicker] = useState(false);
  return (
    <>
      <VZInputTextField
        value={`${selectedDate.getMonth()}/${selectedDate.getDay()}/${selectedDate.getFullYear().toString().slice(-2)}`}
        onChange={() => {}}
        disabled
      />
      <OptionalComponent show={showDatePicker}>
        <DayPicker
          mode="single"
          selected={selectedDate}
          onSelect={(e) => onDaySelect(e)}
          captionLayout="dropdown"
          classNames={{
            day: "text-dark",
          }}
        />
      </OptionalComponent>
    </>
  );
};


Hi I want to show the date picker when the mouse enters the text field and close the datePicker when the Mouse goes off the Date Picker 

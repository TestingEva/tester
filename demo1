also giving you the schema which i have written 

import { z } from "zod";
import { getEnumValues } from "../../ui/utils";
import { zodIpAddress } from "../utils";
import { convertPortForwardingProtocolDataToString } from "./mappings";
import { PortForwardingProtocolData } from "./models";

const GroupExternalPortRangeResponseSchema = z.union([[(z.number())], z.array(z.number(), z.number())]);

const PortMappingDataResponseSchema = z.object({
  enabled: z.boolean(),
  groupExternalPortRange: z.array(GroupExternalPortRangeResponseSchema),
  hostName: z.string().min(1),
  internalClient: zodIpAddress("v4", false),
  internalPort: z.number().nonnegative(),
  name: z.string().min(1),
  portMappingId: z.string().min(1),
  protocol: z.enum(
    getEnumValues(PortForwardingProtocolData).map(convertPortForwardingProtocolDataToString) as [string]
  ),
  scheduleId: z.string(),
});

export const PortForwardingDataResponseSchema = z.object({
  portMappingPolicyList: z.array(PortMappingDataResponseSchema),
});



import React from "react";
import { Container } from "react-bootstrap";
import styled from "styled-components";
import { VZFooter } from "../VZFooter";

export type Props = {
  children?: React.ReactNode;
  style?: React.CSSProperties;
  noTopPadding?: boolean;
};

const VZBodyContainer = styled(Container)<{ $removeTopPadding: boolean }>`
  padding: 20px;
  display: flex;
  flex-direction: column;
  flex: 1;
  overflow: auto;
  height: 100%;
  ${(props) => props.$removeTopPadding && { paddingTop: 0 }}
`;

export const VZBody: React.FC<Props> = (props) => {
  return (
    <VZBodyContainer $removeTopPadding={props.noTopPadding ?? false} style={props.style}>
      <Container className="flex-1 p-0">{props.children}</Container>
      <VZFooter />
    </VZBodyContainer>
  );
};



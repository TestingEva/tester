/**
 *
 * @param endpoint - polling Api endpoint
 * @param sleepDuration - sleep timeout required
 * @param request - <T> which represents the payload
 */
export async function intiatePolling<T>(endpoint: string, sleepDuration: number, request: T): Promise<void> {
  let pollingStatus = false;
  let maxAttempts = 20;
  const sleepTime = sleepDuration / 20;
  do {
    const status = await getPollingStatusApi(endpoint, request);
    pollingStatus ||= status;
    maxAttempts--;
    await sleep(sleepTime);
  } while (!pollingStatus && maxAttempts > 0);
}



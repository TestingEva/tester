import React, { useState } from "react";

import "./VZCheckbox.css";
import styled from "styled-components";

interface Props {
  checked: boolean;
  onChange: (val: boolean) => void;
  disabled:boolean
}

const CheckboxTemplate = styled.div<{ $checked: boolean; $disabled: boolean }>`
  height: 20px;
  width: 20px;
  cursor: pointer;
  color: white;
  border: 1px solid black;
  background-color: ${(props) => (props.$checked ? "black" : "white")};
  &props.$disabled:
`;

export const VZCheckbox: React.FC<Props> = (props) => {
  const [isChecked, setIsChecked] = useState(props.checked);

  const toggleChecked = () => {
    const newValue = !isChecked;
    setIsChecked(newValue);
    props.onChange(newValue);
  };

  return (
    <CheckboxTemplate $checked={isChecked} onClick={toggleChecked} $disabled={props.disabled}>
      <i className="icon icon--check vz--checkbox--tick" />
    </CheckboxTemplate>
  );
};


This is  a checkbox styled componenet i want that when disabled is given then the cursor changes to pointer and it should not be clickable and the color of outer border should be #d8dada

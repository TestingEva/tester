import { useState } from "react";
import { Col, Row } from "react-bootstrap";
import styled from "styled-components";

export const OptionViewContainer = styled(Col)`
  padding: 0 10px;
`;

export const OptionsViewHeader = styled(Row)`
  height: 64px;
  border-bottom: 1px solid black;
  align-items: center;
  font-size: 20px;
  font-family: "Verizon NHG eDS Bold", sans-serif;
`;

export const OptionsViewRow = styled(Row)`
  height: 60px;
  border-bottom: 1px solid #d8dada;
  align-items: center;
  gap: 16px;
  font-family: "Verizon NHG eTX Bold", sans-serif;
`;

export const RadioButton = styled.input`
  appearance: none;
  border-radius: 50%;
  width: 20px;
  height: 20px;
  border: 1px solid #000;
  margin-top: 0.25em;
  &:hover {
    cursor: pointer;
  }
  &:checked {
    background: #000;
  }
`;

export const OptionsView: React.FC = () => {
  const [selectedOption, setOption] = useState(0);
  return (
    <OptionViewContainer>
      <OptionsViewHeader>Logging view options</OptionsViewHeader>
      <OptionsViewRow>
        <RadioButton type={"radio"} name="radio" checked={selectedOption === 0} onChange={() => setOption(0)} />
        Past day
      </OptionsViewRow>
      <OptionsViewRow>
        <RadioButton type={"radio"} name="radio" checked={selectedOption === 1} onChange={() => setOption(1)} />
        Past week
      </OptionsViewRow>
      <OptionsViewRow>
        <RadioButton type={"radio"} name="radio" checked={selectedOption === 2} onChange={() => setOption(2)} />
        Custom range
      </OptionsViewRow>
    </OptionViewContainer>
  );
};

